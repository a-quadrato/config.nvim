{
  "coc.preferences.snippetStatusText": "\u24c8",
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "html",
    "css",
    "json",
    "markdown",
    "python",
    "golang",
    "rust-analyzer",
    "latex"
  ],
  "sumneko-lua.enable": true,
  "sumneko-lua.enableNvimLuaDev": true,
  "sumneko-lua.checkUpdate": false,
  "Lua.telemetry.enable": false,
  "Lua.diagnostics.enable": true,
  "Lua.diagnostics.globals": ["vim"],
  //"Lua.workspace.library": [
  //  {"vim.api.nvim_get_runtime_file": true
  //],
  "stylua.styluaPath": "/usr/bin/stylua",

  "texlab.build.onSave": true,
  "texlab.path": "/usr/bin/texlab",
  "texlab.build.executable": "latexmk",
  "texlab.forwardSearch.executable": "zathura",
  "texlab.build.forwardSearchAfter": true,
  "texlab.forwardSearch.args": ["--synctex-forward", "%l:1%f", "%p"],
  "texlab.build.args": [
    "-pdf",
    "-pvc",
    "-interaction=nonstopmode",
    "-synctex=1",
    "%f"
  ],
  "java.home": "/usr/lib/jvm/java-11-openjdk",
  "java.enabled": true,
  "java.format.enabled": false,
  "xml.format.enabled": true,
  "xml.format.preservedNewlines": 2,
  //suggest settings
  "suggest.noselect": false,
  "suggest.detailField": "abbr",
  "suggest.snippetIndicator": "",
  "suggest.removeDuplicateItems": true,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 2000,
  "suggest.minTriggerInputLength": 1,
  "suggest.floatConfig": {
    "maxHeight": 7,
    "border": true,
    "rounded": false
  },
  "suggest.labelMaxLength": 60,
  "suggest.completionItemKindLabels": {
    "function": "\uf794",
    "method": "\uf6a6",
    "variable": "\uf71b",
    "constant": "\uf8ff",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\ufa52",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf668",
    "color": "\ue22b",
    "property": "\ufab6",
    "field": "\uf93d",
    "unit": "\uf475",
    "file": "\uf471",
    "value": "\uf8a3",
    "event": "\ufacd",
    "folder": "\uf115",
    "keyword": "\uf893",
    "snippet": "\uf64d",
    "operator": "\uf915",
    "reference": "\uf87a",
    "typeParameter": "\uf278",
    "default": "\uf29c"
  },

  //diagnostic settings
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": false,
  "diagnostic.errorSign": "\u2718",
  "diagnostic.warningSign": "\uf071",
  "diagnostic.infoSign": "\uf7fc",
  "diagnostic.hintSign": "\uf835",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.autoRefresh": true,

  // list settings
  "list.source.grep.command": "rg",
  "bibtex.enable": true,
  "list.source.bibtex.files": ["./*.bib"],

  // git settings
  "git.topRemovedSign.text": "‾",
  "git.changeRemovedSign.text": "≃",
  "git.removedSign.text": "\uf873", // a fancy -
  "git.addedSign.text": "+", // a fancy +
  "git.changedSign.text": "\ufc23", // a fancy ~
  "git.addedSign.hlGroup": "DiffAdd",
  "git.changedSign.hlGroup": "DiffChange",
  "git.removedSign.hlGroup": "DiffDelete",
  "git.topRemovedSign.hlGroup": "DiffDelete",
  "git.changeRemovedSign.hlGroup": "DiffChange",

  // other stuff (language specific)
  "html.autoClosingTags": true,

  "sh.enable": true,
  "clangd.enabled": true,
  "clangd.checkUpdates": true,

  "tailwindCSS.cssLanguages": [
    "css",
    "less",
    "postcss",
    "sass",
    "scss",
    "stylus",
    "vue"
  ],
  "tailwindCSS.jsLanguages": ["javascript"],
  "tailwindCSS.htmlLanguages": ["vue"],
  "tailwindCSS.emmetCompletions": true,

  "yaml.trace.server": "verbose",
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "docker-compose.@(yaml|yml)",
    "https://json.schemastore.org/pre-commit-config.json": ".pre-commit-config.@(yaml|yml)",
    "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": ".gitlab-ci.@(yaml|yml)"
  },
  "yaml.format.enable": true,
  "yaml.completion": true,
  "yaml.format.printWidth": 80,
  "yaml.format.bracketSpacing": true,
  "yaml.validate": true,

  "jedi.enable": true,
  "jedi.trace.server": "verbose",
  "jedi.hover.enable": true,
  "jedi.startupMessage": false,
  "pyright.enable": true,
  "python.linting.enabled": false,
  "python.linting.lintOnSave": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/usr/bin/autopep8",
  "python.formatting.autopep8Args": ["--ignore=E402"],

  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",
  "ansible.enable": true,

  "sql.database": "postgresql",
  "sql.formatOptions": { "--keywords": "upper" },
  "golines.path": "/home/botand/.local/share/go/bin/golines",
  "snippets.ultisnips.pythonPrompt": false
}
